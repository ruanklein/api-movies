{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "semi": ["error", "never"],
        "max-len": "off",
        "prettier/prettier": [ "error", {
            "endOfLine": "auto",
            "semi": false,
            "singleQuote": true,
            "printWidth": 80,
            "tabWidth": 2,
            "trailingComma": "es5"
        }]
    }
}
